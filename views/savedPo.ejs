<!doctype html>
<html lang="en">
  <head>
    <%- include('./common/head') %>
    <link rel="stylesheet" href="stylesheets/index.css">
    <style>
      th:hover{
        background-color: #ccc;
      }
    </style>
  </head>

  <body>

    <header>
      <%- include('./common/navbar') %>
      <% if(successFlash.length>0) { %>
        <div class="container mt-1">
          <div class="alert alert-info">
            <%= successFlash %>
          </div>
        </div>
      <% } %>
    </header>

    <!-- Begin page content -->
    <main style="margin-top: 60px;">
      <div class="py-5 my-3 text-center">
        <h2>POs saved for later.</h2>
        <p class="lead">Select some of the POs to contiue working on...</p>
      </div>

      <div class="container my-3">
        <% if(pos.length>0) { %>
        <table class="table">
            <thead>
              <tr>
                <th scope="col" onclick="w3.sortHTML('.table','.item', 'td:nth-child(1)')">Serial No <i class="fa fa-sort"></i></th>
                <th scope="col" onclick="w3.sortHTML('.table','.item', 'td:nth-child(2)')">Indent No <i class="fa fa-sort"></i></th>
                <th scope="col" onclick="w3.sortHTML('.table','.item', 'td:nth-child(3)')">Date Prepared <i class="fa fa-sort"></i></th>
                <th scope="col" onclick="w3.sortHTML('.table','.item', 'td:nth-child(4)')">File No <i class="fa fa-sort"></i></th>
                <th scope="col">View this PO</th>
                <th scope="col">Workon</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
                <% pos.forEach(po => { %> 
              <tr class='item'>
                <!-- <th scope="row">1</th> -->
                <% console.log(po); %>
                <td><%=po.serialNo %></td>
                <td><%=po.indentNo %></td>
                <td><%=po.sanctionDate %></td>
                <td><%=po.fileNo %></td>
                <td><button type="button" class="btn btn-outline-info" data-toggle="modal" data-target="#exampleModal" data-whatever="<%= po.fileName %>"><i class="fa fa-eye"></i></button></td>
                <td><a class="btn btn-outline-primary" href="/confirmationPage/<%= po._id %>"><i class="fa fa-edit"></i></a></td>
                <td><a href="/deleteSaved/<%= po._id %>" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a></td>
              </tr>
           <% }); %>
            </tbody>
          </table>
          <% } else { %>
            <p class="lead text-center">Wohoo... All Done for now!</p>
            <% } %>
        </div>
    </main>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">View PO</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <!-- <form>
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Recipient:</label>
                <input type="text" class="form-control" id="recipient-name">
              </div>
              <div class="form-group">
                <label for="message-text" class="col-form-label">Message:</label>
                <textarea class="form-control" id="message-text"></textarea>
              </div>
            </form> -->
            <canvas id="target-section" height="100px" width="100px">
              <p>PO Here</p>
            </canvas>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <%- include('./common/footer') %>
    <script src="//mozilla.github.io/pdf.js/build/pdf.js"></script>
    <script src="https://www.w3schools.com/lib/w3.js"></script>
    <script>
      pdfjsLib.GlobalWorkerOptions.workerSrc = '//mozilla.github.io/pdf.js/build/pdf.worker.js';
      $('#exampleModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        var recipient = button.data('whatever') // Extract info from data-* attributes
        var url = '/uploads/'+recipient;
        pdfjsLib.getDocument(url).promise.then(function getPdfHelloWorld(pdf) {
          pdf.getPage(pdf.numPages-2).then(function getPageHelloWorld(page) {
            var scale = 1.3;
            var viewport = page.getViewport({scale});
            var canvas = document.getElementById('target-section');
            var context = canvas.getContext('2d');
            
            canvas.height = viewport.height;
            canvas.width = viewport.width;
            page.render({canvasContext: context, viewport: viewport});
          });
        });
        // var modal = $(this)
        // modal.find('.modal-title').text('New message to ' + recipient)
        // modal.find('.modal-body input').val(recipient)
      })
    </script>
  </body>
</html>