<!doctype html>
<html lang="en">
  <head>
    <%- include('./common/head') %>
    <link rel="stylesheet" href="stylesheets/index.css">
  </head>

  <body>

    <header>
      <%- include('./common/navbar') %>
      <% if(successFlash.length>0) { %>
        <div class="container mt-1">
          <div class="alert alert-info">
            <%= successFlash %>
          </div>
        </div>
        <% } %>
    </header>

    <!-- Begin page content -->
    <main role="main" class="container">
      <div class="jumbotron ">
        <h1 class="display-5">ICSR, IIT Ropar</h1>
        <p class="lead">Welcome to the Purchase Order Filing Site.</p>
        <hr class="my-4">
        <p>This portal can only be accessed using IIT Ropar Email ID.</p>
      </div>

      

