<!doctype html>
<html lang="en">
  <head>
    <%- include('../common/head') %>
    <link rel="stylesheet" href="stylesheets/index.css">
  </head>

  <body>

    <header>
      <%- include('../common/navbar') %>
      <% if(successFlash.length>0) { %>
        <div class="container mt-1">
          <div class="alert alert-info">
            <%= successFlash %>
          </div>
        </div>
        <% } %>
    </header>

    <!-- Begin page content -->
    <main role="main" class="container">
      <div class="container d-flex align-items-center justify-content-center" style="height:80vh;">
      <div class="bg-light border border-dark rounded w-50">
        <form action="/users/login" class="mx-4 my-4" method="post">
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class='form-control w-100' name="email" id="email" placeholder="example@iitrpr.ac.in" required/>
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input class="form-control w-100" type="password" name="password" id="password" placeholder="Password" required />
          </div>
          <button class="btn btn-outline-primary" type="submit">Submit</button>
          <hr>
          <a href="#" class="text-decoration-none">Reset Password</span></a>
        </form>
        </div>
      </div>
    </main>
    
    <%- include('../common/footer') %>
    
  </body>
</html>